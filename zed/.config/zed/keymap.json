[
    {
        "bindings": {
            // "alt-cmd-j": "workspace::ToggleRightDock",
            // "alt-cmd-i": "agent::ToggleFocus",
            // "shift-cmd-j": "workspace::ToggleBottomDock",
            "shift-cmd-i": "terminal_panel::ToggleFocus"
        }
    },
    {
        "context": "Editor && vim_mode == normal",
        "bindings": {
            "ctrl-w V": "workspace::NewFileSplitVertical",
            "ctrl-w S": "workspace::NewFileSplitHorizontal"
        }
    },
    {
        "context": "ProjectPanel && not_editing",
        "bindings": {
            "s": null,
            "%": null,
            ".": "project_panel::ToggleHideGitIgnore",
            "H": "project_panel::ToggleHideGitIgnore",
            "o": "project_panel::Open",
            "n": "project_panel::NewFile",
            "cmd+delete": "project_panel::Trash",
            "shift+delete": "project_panel::Delete"
        }
    },
    {
        "context": "Terminal",
        "bindings": {
            // behave like ghostty, kitty, etc...
            "cmd-d": "pane::SplitVertical",
            "shift-cmd-d": "pane::SplitHorizontal",
            "alt-cmd-left": "workspace::ActivatePaneLeft",
            "alt-cmd-down": "workspace::ActivatePaneDown",
            "alt-cmd-up": "workspace::ActivatePaneUp",
            "alt-cmd-right": "workspace::ActivatePaneRight",
            "ctrl-cmd-left": null,
            "ctrl-cmd-down": "vim::ResizePaneDown",
            "ctrl-cmd-up": "vim::ResizePaneUp",
            "ctrl-cmd-right": null,
            "shift-cmd-enter": "workspace::ToggleZoom",
            "cmd-1": null,
            "cmd-2": null,
            "cmd-3": null,
            "cmd-4": null,
            "cmd-5": null,
            "cmd-6": null,
            "cmd-7": null,
            "cmd-8": null,
            "cmd-9": null
        }
    }
]
