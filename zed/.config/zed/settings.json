// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "vim_mode": true,
    "agent_font_size": 18,
    "ui_font_family": "Iosevka N Quasi-Proportional",
    "ui_font_size": 16,
    "buffer_font_family": "Iosevka N",
    "buffer_font_size": 14,
    "relative_line_numbers": false,
    "show_wrap_guides": true,
    "wrap_guides": [80, 120],
    "soft_wrap": "none",
    "pane_split_direction_horizontal": "down",
    "pane_split_direction_vertical": "right",
    "terminal": {
        "dock": "bottom",
        "font_family": "Iosevka N Term",
        "font_size": 14,
        "line_height": "standard"
    },
    "features": {
        "edit_prediction_provider": "zed"
    },
    "agent": {
        "version": "2",
        "default_profile": "ask",
        "default_model": {
            "provider": "copilot_chat",
            "model": "claude-sonnet-4"
        },
        "inline_assistant_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4"
        },
        "model_parameters": []
    },
    "collaboration_panel": {
        "dock": "left"
    },
    "ssh_connections": [
        {
            "host": "aphrodite",
            "projects": [
                {
                    "paths": [
                        "/home/nbetm/work/elvex/api",
                        "/home/nbetm/work/elvex/iac",
                        "/home/nbetm/work/px/px"
                    ]
                }
            ]
        }
    ],
    "icon_theme": "Material Icon Theme",
    "theme": "Nord",
    // "experimental.theme_overrides": {
    //     // "editor.line_number": "#79869f",
    //     // "surface.background": "#222630",
    //     // https://github.com/mikasius/zed-nord-theme/issues/13
    //     // "elevated_surface.background": "#383e4f",
    // },
    "telemetry": {
        "metrics": false,
        "diagnostics": false
    },
    "auto_install_extensions": {
        "basher": true,
        "make": true,
        "nix": true,
        "terraform": true,
        "toml": true,
        "zig": true
    },
    "file_types": {
        "Shell Script": [
            "**/completions/_*",
            "**/zsh/**/dot-z*",
            "dir_colors",
            "dot-direnvrc"
        ]
    },
    "languages": {
        "Python": {
            "language_servers": ["!pylsp", "pyright", "ruff"],
            "format_on_save": "on",
            "formatter": [
                {
                    "code_actions": {
                        // Fix all auto-fixable lint violations
                        "source.fixAll.ruff": true,
                        // Organize imports
                        "source.organizeImports.ruff": true
                    }
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ]
        },
        "Lua": {
            "format_on_save": "on",
            "formatter": {
                "external": {
                    "command": "stylua",
                    "arguments": [
                        "--syntax=Lua54",
                        "--respect-ignores",
                        "--stdin-filepath",
                        "{buffer_path}",
                        "-"
                    ]
                }
            }
        },
        "JSON": {
            "tab_size": 4
        },
        "JSONC": {
            "tab_size": 4
        }
    },
    "lsp": {
        "pyright": {
            "settings": {
                "python.analysis": {
                    "dignosticMode": "workspace",
                    "typeCheckingMode": "standard"
                },
                "python": {
                    "pythonPath": ".venv/bin/python"
                }
            }
        },
        "terraform-ls": {
            "initialization_options": {
                "experimentalFeatures": {
                    "prefillRequiredFields": true
                }
            }
        }
    }
}
