# vim: set ft=conf :

theme = nord-deep

# OS-specific settings
config-file = os.conf

font-family = Iosevka N Term
font-thicken = true
font-thicken-strength = 0
adjust-cell-height = 2
# background-opacity = 0.8

title = " "
macos-titlebar-proxy-icon = hidden

shell-integration = zsh
shell-integration-features = true
cursor-style = bar

quick-terminal-position = top
quick-terminal-size = "50%,60%"
quick-terminal-autohide = true

mouse-hide-while-typing = true

unfocused-split-opacity = 0.90

clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true

keybind = super+backspace=text:\x15
keybind = global:super+shift+space=toggle_quick_terminal
keybind = shift+enter=text:\n

keybind = super+f=write_scrollback_file:paste
keybind = super+shift+h=write_scrollback_file:paste

# Jump to beginning and end of word (macOS)
keybind = alt+left=text:\x1b\x62
keybind = alt+right=text:\x1b\x66

# Jump to beginning and end of line (macOS)
# Note: Use Home/End instead of ctrl-a/ctrl-e
keybind = super+left=text:\x1b[H
keybind = super+right=text:\x1b[F
